{
  "name": "LGTM",
  "description": "Set your default PR review on github",
  "version": "0.2",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "options.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js":      ["content.js"]
  }],
  "options_page": "options.html",
  "icons": {
    "16": "img/lgtm-16.png",
    "32": "img/lgtm-32.png",
    "48": "img/lgtm-48.png",
    "128": "img/lgtm-128.png"
  },
  "manifest_version": 2
}
